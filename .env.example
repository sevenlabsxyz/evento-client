# ====================================
# API Configuration
# ====================================

# Public API URL - Used by the frontend to make API requests
NEXT_PUBLIC_API_URL=

# API Proxy Target - Used by the server-side API proxy
# Note: This should point to your backend API endpoint
API_PROXY_TARGET=

# ====================================
# Supabase Configuration
# ====================================

# Supabase Project URL
# Format: 'https://[project-ref].supabase.co'
# Note: This is exposed to the client-side code
NEXT_PUBLIC_SUPABASE_URL=

# Supabase Anon/Public Key
# Note: This is exposed to the client-side code and should have limited permissions
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ====================================
# Ghost CMS Configuration (Used for blog posts and content)
# ====================================

# Ghost CMS URL
# Format: 'https://your-ghost-instance.ext'
GHOST_URL=

# Ghost Content API Key
# Used to fetch blog posts and content from Ghost CMS
GHOST_CONTENT_API_KEY=